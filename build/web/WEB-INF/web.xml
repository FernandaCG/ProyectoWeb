<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Triangulos</servlet-name>
        <servlet-class>com.ipn.controlador.Triangulos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Fail</servlet-name>
        <servlet-class>com.ipn.controlador.Fail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Mostrar</servlet-name>
        <servlet-class>com.ipn.controlador.Mostrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Administrador</servlet-name>
        <servlet-class>com.ipn.controlador.Administrador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Profesor</servlet-name>
        <servlet-class>com.ipn.controlador.Profesor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Triangulos</servlet-name>
        <url-pattern>/Triangulos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Fail</servlet-name>
        <url-pattern>/Fail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Mostrar</servlet-name>
        <url-pattern>/Mostrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Administrador</servlet-name>
        <url-pattern>/Administrador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profesor</servlet-name>
        <url-pattern>/Profesor</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>
